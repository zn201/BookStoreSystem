    <script type="text/javascript">
        $(function () {
            
            //alert($("#mycart-amount").html());
            $.ajax({
                url: '/Category/CategoryFirst',
                type: 'POST',
                async: false,
                success: function (res) {
                    //console.log(res);
                    if (res.code == '200') {
                        //console.log(res.data);
                        var data = res.data;
                        var html = "";
                        for (var i = 0; i < data.length; i++) {
                            $(".menu-item").append("<li><a href='javascript:void (0)'>" + data[i].cname + "</a></li>");
                            var pid = data[i].cid;
                            $.ajax({
                                url: '/Category/CategorySecond',
                                type: 'POST',
                                async: false,
                                data: { 'pid': pid },
                                success: function (result) {
                                    if (result.code == '200') {
                                        var data = result.data;
                                        html += "<div class='menu-cont-list' style = 'display:none;'><ul>";
                                        for (var i = 0; i < data.length; i++) {
                                            //console.log(data[i].cname);
                                            html += "<li><a href='/Book/BookList?cid=" + data[i].cid + "'>" + data[i].cname + "</a></li>";
                                        }
                                        html += "</ul> </div>";
                                        //console.log(html);


                                    }
                                }
                            })
                        }
                        $(".menu-cont").append(html);
                        //$(".mod-menu").append("<div class='menu-cont' style='display:none;'>"+html);
                    }
                    var mod_menu = $(".mod-menu");//导航模块区
                    var menu = function () {
                        var menuItem = $(".menu-item li");//选择导航列表
                        menuItem.each(function () {
                            var _index = $(this).index();//获取当前选择菜单列表的索引
                            //var _index = $('.menu-item a').index(this);
                            //alert(_index);
                            $(this).mouseenter(function () {
                                var y = $(this).position().top + 1;//获取当前鼠标滑过的列表的顶部坐标
                                //alert(y)
                                $(".menu-cont").show();
                                $(".menu-cont").css("top", y);//需要显示的对应索引内容
                                $(this).addClass("mouse-bg").siblings().removeClass("mouse-bg");
                                $(".menu-cont>div").eq(_index).show().siblings().hide();
                            });
                        });/*导航菜单菜单*/
                        $(".mod-menu").mouseleave(function () {
                            $(".menu-cont").hide();
                            menuItem.removeClass("mouse-bg");
                        })
                    }//展开二级菜单
                    menu();//执行展开二级菜单函
                }
            });
            var amount = UserStatus();
            $("#mycart-amount").html(amount);
        });
        function UserStatus() {
            var amount=0;
            $.ajax({
                url: '/User/islogin',
                type: 'POST',
                async: false,
                success: function (res) {
                    //console.log(res);
                    if (res.code == '200') {
                        //console.log(res.loginname);
                        $(".welcome").hide();
                        $(".userName").text(res.loginname);
                        $(".loginInfo").show();
                        //var amount = 0;
                        $.ajax({
                            url: '/Cart/queryCartItem',
                            data: { loginname: res.loginname},
                            async: false,
                            type: 'POST',
                            success: function (res) {
                                //console.log(res);
                                if (res.code == '200') {
                                    //alert(res.amount);
                                    $("#mycart-amount").html("");
                                    amount = res.data.length;
                                }
                            }
                        });
                    } else if (res.code == '100') {
                        $(".loginInfo").hide();
                        $(".welcome").show();
                    }
                }
            });
            return amount;
        }
        function myMiaoMiao() {
            var myaccount = $(".userName").text();
            if (myaccount == '') {
                layui.use('layer', function () {
                    var layer = layui.layer;
                    layer.msg('请先登录，再操作', { icon: 5, time: 3000 }, function () {
                        location.href = '/User/Login';
                    });
                })
            } else {
                location.href = '/User/userAccount';
            }
        }
        function myOrderCenter() {
            var myaccount = $(".userName").text();
