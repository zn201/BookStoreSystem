<script>
    $(function () {
        var cid = getUrlPara("cid");
        var url = '/Book/getBookList';
        //var data = '{"cid":"' + d + '","pageItem":1,"limit":6}';//"'cid':'" + d + "', 'pageItem': '1', 'limit': '5' ";//'{name:"jack"}';
        //var json = JSON.parse(data)
        var count = ajaxGetBookList(url, cid, 1, 6);

        layui.use('laypage', function () {
            var laypage = layui.laypage;
            //执行一个laypage实例
            laypage.render({
                elem: 'page' //注意，这里是 ID，不用加 # 号
                , count: count //数据总数，从服务端得到
                , theme: '#FF5722'
                , limit: 6
                , groups: 3
                , limits: [6, 30, 60]
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj, first) {
                    //console.log(obj)
                    if (!first) {//首次不执行
                        ajaxGetBookList(url, cid, obj.curr, obj.limit);
                    }
                }
            });
        });
    });

    function getUrlPara(paraName) {
        var sUrl = location.href;
        var sReg = "(?:\\?|&){1}" + paraName + "=([^&]*)"
        var re = new RegExp(sReg, "gi");
        re.exec(sUrl);
        return RegExp.$1;
    }

    function ajaxGetBookList(url, data, pageItem, limit) {
        var datas = '{"cid":"' + data + '","pageItem":' + pageItem + ',"limit":' + limit + '}';//"'cid':'" + d + "', 'pageItem': '1', 'limit': '5' ";//'{name:"jack"}';
        var json = JSON.parse(datas);
        var count = 0;
        $.ajax({
            url: url,
            data: json,
            async: false,
            type: 'POST',
            success: function (res) {
                //console.log(res.data);
                if (res.code == '200') {
                    var data = res.data;
                    count = data.TotalItems;
                    if (data.Items.length > 0) {
                        $(".booklist").html('');
                        var item = data.Items;
                        var html = '';
                        for (var i = 0; i < item.length; i++) {
                            html += "<li><div class='inner'><a class='pic' href='/Book/BookDetail?bid=" + item[i].bid+"'><img src='/Content/" + item[i].image_b + "' border='0'/></a>" +
                                " <p class='price'>" +
                                "<span class='price_n'>&yen;" + item[i].currPrice + "</span>" +
                                "<span class='price_r'>&yen;" + item[i].price + "</span>" +
                                "(<span class='price_s'>" + item[i].discount + "折</span>)</p>" +
                                "<p><a id='bookname' title='" + item[i].bname + " 'href='/Book/BookDetail?bid=" + item[i].bid +"'>" + item[i].bname + "</a></p>" +
                                "<p><a href='/Book/BookDetail?bid=" + item[i].bid +"' name='P_zz' title='" + item[i].author + " '>" + item[i].author + "</a></p>" +
                                "<p class='publishing'><span>出 版 社：</span><a href='/Book/BookDetail?bid=" + item[i].bid +"'>" + item[i].press + "</a></p>" +
                                "<p class='publishing_time'><span>出版时间：</span>" + item[i].publishtime + "</p></div></li >";
                        }
                        $(".booklist").append(html);
                    }
                }
            }
        })
        return count;
    }

</script>

